--- 
import { Image } from "astro:assets";

interface Props {
    avatar: ImageMetadata;
    name: string;
}

const { avatar, name } = Astro.props;

---
    <Image
        class="avatar-image"
        src={avatar}
        alt={`Avatar of ${name}`}
        width={100}
        height={100}
        quality="mid"
        format='webp'
    />

